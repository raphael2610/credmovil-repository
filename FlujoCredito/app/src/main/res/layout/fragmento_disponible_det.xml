<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pe.com.cmacica.flujocredito.ViewModel.Digitacion.FragmentoDisponibleDet">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Detalle Disponible"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:id="@+id/texttitulo" />
        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="8dp"
            android:layout_below="@+id/texttitulo"
            android:layout_marginTop="@dimen/padding_between"
            android:background="@color/colorPrimaryDark"/>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:rowCount="7"
            android:layout_margin="8dp"
            android:columnCount="2"
            android:layout_below="@+id/divider"
            android:id="@+id/GridDetGastoFteIgrDep" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Efectivo:"
                android:layout_row="0"
                android:layout_column="0" />
            <EditText
                android:layout_width="@dimen/ancho_EditText_Monto"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:background="@drawable/edit_text_border"
                android:ems="10"
                android:maxLength="11"
                android:hint="0"
                android:padding="2dp"
                android:layout_margin="2dp"
                android:id="@+id/txtMontoEfectivo"
                android:layout_row="0"
                android:layout_column="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ahorros:"
                android:layout_column="0"
                android:layout_row="1" />
            <EditText
                android:layout_width="@dimen/ancho_EditText_Monto"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_border"
                android:inputType="numberDecimal"
                android:ems="10"
                android:hint="0"
                android:maxLength="11"
                android:id="@+id/txtMontoAhorros"
                android:padding="2dp"
                android:layout_margin="2dp"
                android:layout_row="1"
                android:layout_column="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cta.Cte"
            android:layout_column="0"
            android:layout_row="2" />
        <EditText
            android:layout_width="@dimen/ancho_EditText_Monto"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:background="@drawable/edit_text_border"
            android:ems="10"
            android:hint="0"
            android:maxLength="11"
            android:padding="2dp"
            android:layout_margin="2dp"
            android:id="@+id/txtMontoCtaEfec"
            android:layout_row="2"
            android:layout_column="1" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TOTAL:"
            android:layout_column="0"
            android:textSize="20dp"
            android:layout_row="6"
            android:textStyle="bold" />
        <EditText
            android:layout_width="@dimen/ancho_EditText_Monto"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_border"
            android:padding="2dp"
            android:layout_margin="2dp"
            android:inputType="numberDecimal"
            android:textSize="24dp"
            android:ems="10"
            android:hint="0"
            android:focusable="false"
            android:maxLength="15"
            android:id="@+id/txtMontoTotal"
            android:layout_row="6"
            android:layout_column="1"
            android:textStyle="bold" />


    </GridLayout>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:id="@+id/llOperacionSim"
        android:layout_below="@+id/GridDetGastoFteIgrDep"
        >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Guardar"
            android:layout_weight="1"
            android:layout_marginRight="4dp"
            android:drawableLeft="@android:drawable/ic_menu_save"
            android:background="@color/colorPrimary"
            android:textColor="@color/cardview_light_background"
            android:id="@+id/btnAceptar" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancelar"
            android:layout_marginLeft="4dp"
            android:background="@color/colorPrimary"
            android:textColor="@color/cardview_light_background"
            android:layout_weight="1"
            android:drawableLeft="@android:drawable/ic_menu_delete"
            android:id="@+id/btnCancelar" />

    </LinearLayout>

</RelativeLayout>
