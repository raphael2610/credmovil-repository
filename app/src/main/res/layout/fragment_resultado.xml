<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="pe.com.cmacica.flujocredito.ViewModel.AgendaComercial.ResultadoFragment">


    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/espacio_norma_1"
        tools:context="pe.com.cmacica.flujocredito.ViewModel.AgendaComercial.ResultadoFragment">


        <TextView
            android:id="@+id/textOffer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/resultado_ofreciste"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/Subtitle2"></TextView>
        <Spinner
            android:id="@+id/spinnerOffer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/textOffer"
            android:layout_marginTop="@dimen/espacio_norma_2"></Spinner>

        <TextView
            android:id="@+id/textContactType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/resultado_tipo_contacto"
            app:layout_constraintTop_toBottomOf="@id/spinnerOffer"
            android:layout_marginTop="@dimen/espacio_norma_1"
            style="@style/Subtitle2"></TextView>
        <Spinner
            android:id="@+id/spinnerContactType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/textContactType"
            android:layout_marginTop="@dimen/espacio_norma_2"></Spinner>

        <TextView
            android:id="@+id/textResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/resultado_resulto"
            app:layout_constraintTop_toBottomOf="@id/spinnerContactType"
            android:layout_marginTop="@dimen/espacio_norma_1"
            style="@style/Subtitle2"></TextView>
        <Spinner
            android:id="@+id/spinnerResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/textResult"
            android:layout_marginTop="@dimen/espacio_norma_2"></Spinner>

        <TextView
            android:id="@+id/textofferResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/spinnerResult"
            android:layout_marginTop="@dimen/espacio_norma_1"
            android:text="@string/resultado_oferta"
            android:visibility="gone"
            style="@style/Subtitle2"></TextView>
        <Spinner
            android:id="@+id/spinnerOfferResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/textofferResult"
            android:layout_marginTop="@dimen/espacio_norma_2"
            android:visibility="gone"></Spinner>

        <TextView
            android:id="@+id/textAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/spinnerOfferResult"
            android:layout_marginTop="@dimen/espacio_norma_1"
            android:text="@string/resultado_saldo_capital"
            style="@style/Subtitle2"
            android:visibility="gone"></TextView>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/textinputlayoutAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/textAmount"
            android:layout_marginTop="@dimen/espacio_norma_2"
            app:hintEnabled="false"
            android:visibility="gone">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/textinputedittextAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/espacio_norma_1"
                android:inputType="numberDecimal|numberSigned"
                android:maxLength="8"
                android:gravity="center"
                android:background="#45D8D8D8"></android.support.design.widget.TextInputEditText>

        </android.support.design.widget.TextInputLayout>


        <TextView
            android:id="@+id/textNewDateVisit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/textinputlayoutAmount"
            android:layout_marginTop="@dimen/espacio_norma_1"
            android:text="@string/resultado_nueva_fecha_visita"
            style="@style/Subtitle2"
            android:visibility="gone"></TextView>

        <TextView
            android:id="@+id/textDateVisitContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/textNewDateVisit"
            android:layout_marginTop="@dimen/espacio_norma_2"
            android:padding="@dimen/espacio_norma_1"
            android:textAlignment="center"
            android:background="#45D8D8D8"
            android:visibility="gone"></TextView>

    </android.support.constraint.ConstraintLayout>

</android.support.v4.widget.NestedScrollView>



