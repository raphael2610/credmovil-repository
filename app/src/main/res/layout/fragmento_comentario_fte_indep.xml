<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragmentoComentarioFteIndep"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="pe.com.cmacica.flujocredito.ViewModel.Digitacion.FragmentoComentarioFteIndep">

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/app_bar"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="8dp">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/carviewComentarioEvalSocioEconUnidadFamiliar"
                app:cardCornerRadius="6dp"
                app:cardUseCompatPadding="true"
                app:cardElevation="4dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true">

                <LinearLayout
                    style="@style/Widget.CardContent"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/llComentarioEval"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Comentario: Evaluación Socio Económico de la Unidad Familiar "
                        android:id="@+id/textView"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/colorPrimary"
                        />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textMultiLine"
                        android:hint="Ingese comentario..."
                        android:ems="10"
                        android:maxLength="235"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:text=""
                        android:id="@+id/txtComentario1" />

                </LinearLayout>


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/carviewComentarioEvolEconUnidadFamiliar"
                app:cardCornerRadius="6dp"
                app:cardUseCompatPadding="true"
                app:cardElevation="4dp"
                android:layout_below="@+id/carviewComentarioEvalSocioEconUnidadFamiliar"
                android:layout_alignParentBottom="false"
                android:layout_alignParentStart="true">

                <LinearLayout
                    android:orientation="vertical"
                    style="@style/Widget.CardContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/colorPrimary"
                        android:text="Comentario: Evolución Económica de la Unidad Familiar" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textMultiLine"
                        android:hint="Ingese comentario..."
                        android:ems="10"
                        android:maxLength="235"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:text=""
                        android:id="@+id/txtComentario2" />
                </LinearLayout>


            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/carviewComentarioEvolEconUnidadFamiliar2"
                app:cardCornerRadius="6dp"
                app:cardUseCompatPadding="true"
                app:cardElevation="4dp"
                android:layout_below="@+id/carviewComentarioEvalSocioEconUnidadFamiliar"
                android:layout_alignParentBottom="false"
                android:layout_alignParentStart="true">

                <LinearLayout
                    android:orientation="vertical"
                    style="@style/Widget.CardContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/colorPrimary"
                        android:text="Comentario: Evolución Económica de la Unidad Familiar" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textMultiLine"
                        android:hint="Ingese comentario..."
                        android:ems="10"
                        android:maxLength="235"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:text=""
                        android:id="@+id/txtComentario3" />
                </LinearLayout>


            </android.support.v7.widget.CardView>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</RelativeLayout>
