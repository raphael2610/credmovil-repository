<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardCornerRadius="4dp"
    card_view:cardUseCompatPadding="true"
    card_view:cardElevation="4dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="4"
            android:padding="@dimen/espacio_norma_1"
            android:rowCount="6">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="2dp"
                android:layout_marginRight="@dimen/espacio_norma_2"
                android:src="@drawable/usuario"
                android:layout_column="0"
                android:layout_row="0" />

            <TextView
                android:id="@+id/lblNombrePersFteIgr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="2dp"
                android:text="Jhon Castro Cochachi"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_columnSpan="3"
                android:layout_column="1"
                android:layout_row="0" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/espacio_norma_2"
                android:src="@drawable/email"
                android:layout_row="1"
                android:layout_column="0" />

            <TextView
                android:id="@+id/lblDoiPersFteIgr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="70780753"
                android:layout_columnWeight="1"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_row="1"
                android:layout_column="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Actualizado"
                android:id="@+id/lblEstadoPersFteIgr"
                android:layout_row="1"
                android:layout_column="2"
                android:layout_gravity="right"
                />

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimary"
                android:layout_margin="5dp"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_columnSpan="4" />
        <TextView
            android:id="@+id/lblTipoCredito"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="CONSUMO"
            android:layout_columnWeight="1"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_columnSpan="2" />
        <TextView
            android:id="@+id/lblProducto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="PUNTUALITO"
            android:layout_columnWeight="1"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_columnSpan="2" />
        <TextView
            android:id="@+id/lblMoneda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="2000"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_row="5"
            android:layout_column="0" />
        <TextView
            android:id="@+id/lblMontoSol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="2000"
            android:layout_columnWeight="1"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_row="5"
            android:layout_column="1"
            android:layout_columnSpan="2" />

    </GridLayout>


</android.support.v7.widget.CardView>
