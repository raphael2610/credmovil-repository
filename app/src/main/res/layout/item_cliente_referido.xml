<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:id="@+id/cardviewClientReferred"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/espacio_norma_2"
    app:cardElevation="4dp"
    android:layout_margin="@dimen/espacio_norma_1"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.015"></androidx.constraintlayout.widget.Guideline>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.050"></androidx.constraintlayout.widget.Guideline>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelinethre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.8"></androidx.constraintlayout.widget.Guideline>
        <View
            android:id="@+id/viewIndicator"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/ColorSentinel"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="@id/guidelineOne"></View>

        <View
            android:id="@+id/view_background"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/guidelinethre"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingTop="@dimen/espacio_norma_2"
            android:paddingBottom="@dimen/espacio_norma_2"
            android:layout_margin="@dimen/espacio_norma_2"
            android:background="@drawable/box_background"></View>

        <ImageView
            android:id="@+id/imageIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:layout_constraintTop_toTopOf="@id/view_background"
            app:layout_constraintBottom_toBottomOf="@id/view_background"
            app:layout_constraintStart_toStartOf="@id/view_background"
            app:layout_constraintEnd_toEndOf="@id/view_background"
            android:src="@drawable/ic_person"
            android:tint="@android:color/holo_red_light"></ImageView>


        <TextView
            android:id="@+id/textName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@id/guidelineTwo"
            app:layout_constraintEnd_toEndOf="@id/guidelinethre"
            android:layout_marginTop="@dimen/espacio_norma_1"
            android:text="FÃ©lix Junior Chacaliaza Gutierrez"
            style="@style/Subtitle2"></TextView>

        <TextView
            android:id="@+id/textPhone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/textName"
            app:layout_constraintStart_toStartOf="@id/guidelineTwo"
            app:layout_constraintEnd_toEndOf="@id/guidelinethre"
            android:text="927368223"></TextView>

        <TextView
            android:id="@+id/textDNI"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/textPhone"
            app:layout_constraintStart_toStartOf="@id/guidelineTwo"
            app:layout_constraintEnd_toEndOf="@id/guidelinethre"
            android:text="72731703"></TextView>
        <TextView
            android:id="@+id/textAddress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/textDNI"
            app:layout_constraintStart_toStartOf="@id/guidelineTwo"
            app:layout_constraintEnd_toEndOf="@id/guidelinethre"
            android:paddingBottom="@dimen/espacio_norma_1"
            android:layout_marginBottom="@dimen/espacio_norma_1"
            android:text="PPJJ Santa Rosa de Lima J8A"></TextView>

<!--        <Button-->
<!--            android:id="@+id/buttonEliminar"-->
<!--            app:layout_constraintTop_toBottomOf="@id/textAddress"-->
<!--            android:layout_margin="8dp"-->
<!--            android:text="@string/eliminar_referido_action_del"-->
<!--            android:background="@android:color/holo_red_light"-->
<!--            android:textColor="@android:color/white"-->
<!--            app:layout_constraintEnd_toEndOf="parent"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            >-->
<!--            </Button>-->


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>