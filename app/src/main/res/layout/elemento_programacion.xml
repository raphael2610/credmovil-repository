<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="4">

        <TextView
            android:id="@+id/txvDocumento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="0"
            android:text="Documento"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txvNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="1"
            android:text="Nombres"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lblNombre"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_marginLeft="5dp"
            android:layout_row="1"
            android:text="" />

        <TextView
            android:id="@+id/txvDireccion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="2"
            android:text="Direccion"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/lblDireccion"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_marginLeft="5dp"
            android:layout_row="2"
            android:text="" />

        <CheckBox
            android:id="@+id/chck_Seleccionado"
            android:layout_width="wrap_content"
            android:layout_height="21dp"
            android:layout_column="0"
            android:layout_row="1" />


        <TextView
            android:id="@+id/lblDocumento"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_marginLeft="5dp"
            android:layout_row="0"
            android:text="" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="3"
            android:text="Fecha"
            android:textStyle="bold" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="3"
            android:columnCount="2"
            android:layout_marginLeft="5dp"
            android:rowCount="1">

            <TextView
                android:id="@+id/lblFecha"
                style="@android:style/Widget.DeviceDefault.Light.Spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"

                android:layout_row="0"
                android:layout_weight="0.44"
                android:text="2015-07-11"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/lblNumero"
                android:layout_width="74dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_marginLeft="5dp"
                android:layout_row="0"
                android:text="" />
        </GridLayout>
    </GridLayout>


</LinearLayout>