<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardviewExpedienteCredito"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardElevation="4dp">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_margin="16dp">

        <android.support.constraint.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="8dp"></android.support.constraint.Guideline>

        <android.support.constraint.Guideline
            android:id="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.75"></android.support.constraint.Guideline>
        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/textRefundDate"
            app:layout_constraintStart_toStartOf="@id/guideline2"
            android:src="@drawable/proceedings"
            app:layout_constraintEnd_toEndOf="parent"></ImageView>
        <TextView
            android:id="@+id/appcompatviewProceedings"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@id/guideline"
            app:layout_constraintEnd_toEndOf="@id/guideline2"
            android:text="Expediente"
            android:textColor="@android:color/black"
            android:textSize="14sp"></TextView>
        <View
            android:id="@+id/viewDividerCredits"
            android:layout_width="0dp"
            android:layout_height="1dp"
            app:layout_constraintStart_toStartOf="@id/guideline"
            app:layout_constraintEnd_toEndOf="@id/guideline2"
            app:layout_constraintTop_toBottomOf="@id/appcompatviewProceedings"
            android:background="@android:color/darker_gray"></View>



        <TextView
            android:id="@+id/appcompattextviewNroCredit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Nro. CrÃ©dito"
            app:layout_constraintEnd_toEndOf="@id/guideline2"
            app:layout_constraintStart_toStartOf="@id/guideline"
            app:layout_constraintTop_toBottomOf="@id/appcompatviewProceedings"
            android:textColor="#737476"
            android:textSize="10sp"
            android:layout_marginTop="16sp"></TextView>

        <TextView
            android:id="@+id/appcompattextviewNamberContent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/appcompattextviewNroCredit"
            app:layout_constraintStart_toStartOf="@id/guideline"
            app:layout_constraintEnd_toEndOf="@id/guideline2"
            android:text="1080130410006140061"
            android:textColor="@android:color/black"
            android:textSize="10sp"></TextView>
        <TextView
            android:id="@+id/appcompattextviewCreditType"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/appcompattextviewNamberContent"
            app:layout_constraintStart_toStartOf="@id/guideline"
            app:layout_constraintEnd_toEndOf="@id/guideline2"
            android:text="Tipo Credito"
            android:textColor="#737476"
            android:textSize="10sp"
            android:layout_marginTop="16sp"></TextView>

        <TextView
            android:id="@+id/appcompattextviewCreditTypeContent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/appcompattextviewCreditType"
            app:layout_constraintStart_toStartOf="@id/guideline"
            app:layout_constraintEnd_toEndOf="@id/guideline2"
            android:text="Consumo No Resolvente"
            android:textColor="@android:color/black"
            android:textSize="10sp"></TextView>

        <TextView
            android:id="@+id/textState"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/appcompattextviewCreditTypeContent"
            app:layout_constraintStart_toStartOf="@id/guideline"
            app:layout_constraintEnd_toEndOf="@id/guideline2"
            android:text="@string/item_credito_state"
            android:textColor="#737476"
            android:textSize="10sp"
            android:layout_marginTop="16sp"></TextView>
        <TextView
            android:id="@+id/textStateContent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/textState"
            app:layout_constraintStart_toStartOf="@id/guideline"
            app:layout_constraintEnd_toEndOf="@id/guideline2"
            android:text="VIGENTE NORMAL"
            android:textColor="@android:color/black"
            android:textSize="10sp"></TextView>

        <TextView
            android:id="@+id/textRefundDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/appcompattextviewNamberContent"
            app:layout_constraintStart_toStartOf="@id/guideline2"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:text="@string/item_credito_refund_date"
            android:textColor="#737476"
            android:textSize="10sp"></TextView>
        <TextView
            android:id="@+id/textRefundDateContent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/textRefundDate"
            app:layout_constraintStart_toStartOf="@id/guideline2"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="07/12/2018"
            android:textColor="@android:color/black"
            android:textSize="10sp"></TextView>

        <TextView
            android:id="@+id/textAmount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/item_credito_amount"
            app:layout_constraintTop_toBottomOf="@id/textRefundDateContent"
            app:layout_constraintStart_toStartOf="@id/guideline2"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="#737476"
            android:textSize="10sp"
            android:layout_marginTop="16sp"></TextView>
        <TextView
            android:id="@+id/textAmountContent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/textAmount"
            app:layout_constraintStart_toStartOf="@id/guideline2"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="30.000.00"
            android:textColor="@android:color/black"
            android:textSize="10sp"></TextView>


    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>