<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout android:id="@+id/constraintlayoutBusquedaCliente"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/espacio_norma_2"
    android:layout_marginBottom="@dimen/espacio_norma_2"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="@android:color/white">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/espacio_norma_2"
        app:cardElevation="4dp"
        android:backgroundTint="#f5f5f5">


        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/espacio_norma_2"
            >

            <TextView
                android:id="@+id/textName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre"
                style="@style/Subtitle2"></TextView>

            <TextView
                android:id="@+id/textDNI"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/textName"
                android:text="D.N.I."
                android:drawableLeft="@drawable/ic_format_size"
                android:drawableTint="@android:color/black"
                android:drawablePadding="4dp"
                android:gravity="center_vertical"></TextView>

        </android.support.constraint.ConstraintLayout>



    </android.support.v7.widget.CardView>


</android.support.constraint.ConstraintLayout>