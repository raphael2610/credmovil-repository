<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ViewModel.ExpedienteCredito.ConfiguracionCreditoActivity">
        <android.support.constraint.Guideline
            android:id="@+id/guidelineOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="16dp"></android.support.constraint.Guideline>

        <android.support.constraint.Guideline
            android:id="@+id/guidelineTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="56dp"></android.support.constraint.Guideline>

        <android.support.constraint.Guideline
            android:id="@+id/guidelineThree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="16dp"></android.support.constraint.Guideline>


        <include
            layout="@layout/toolbar"></include>


        <android.support.v7.widget.CardView
            android:id="@+id/cardviewPersonalInformation"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/textviewPersonalInformation"
            app:layout_constraintBottom_toBottomOf="@id/textviewPersonalInformation"
            app:layout_constraintStart_toStartOf="@id/guidelineOne"
            app:layout_constraintEnd_toEndOf="@id/guidelineThree"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">
            <View
                android:layout_width="4dp"
                android:layout_height="match_parent"
                android:background="#C62828"
                android:elevation="10dp"></View></android.support.v7.widget.CardView>


        <ImageView
            android:id="@+id/imageviewPersonalInformation"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:layout_constraintTop_toTopOf="@id/textviewPersonalInformation"
            app:layout_constraintBottom_toBottomOf="@id/textviewPersonalInformation"
            app:layout_constraintStart_toStartOf="@id/guidelineOne"
            app:layout_constraintEnd_toStartOf="@id/guidelineTwo"
            android:elevation="10dp"
            android:src="@drawable/ic_personalinformation"></ImageView>

        <TextView
            android:id="@+id/textviewPersonalInformation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            app:layout_constraintStart_toStartOf="@id/guidelineTwo"
            app:layout_constraintEnd_toStartOf="@id/guidelineThree"
            android:layout_marginTop="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:elevation="10dp"
            android:text="Datos Personales"></TextView>

        <android.support.v7.widget.CardView
            android:id="@+id/cardviewEvaluation"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/textviewEvaluation"
            app:layout_constraintBottom_toBottomOf="@id/textviewEvaluation"
            app:layout_constraintStart_toStartOf="@id/guidelineOne"
            app:layout_constraintEnd_toStartOf="@id/guidelineThree"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">
            <View
                android:layout_width="4dp"
                android:layout_height="match_parent"
                android:background="#C62828"></View>
        </android.support.v7.widget.CardView>

        <ImageView
            android:id="@+id/imageviewEvaluation"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:layout_constraintTop_toTopOf="@id/textviewEvaluation"
            app:layout_constraintBottom_toBottomOf="@id/textviewEvaluation"
            app:layout_constraintStart_toStartOf="@id/guidelineOne"
            app:layout_constraintEnd_toEndOf="@id/guidelineTwo"
            android:src="@drawable/ic_evaluation"
            android:elevation="10dp"></ImageView>

        <TextView
            android:id="@+id/textviewEvaluation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/textviewPersonalInformation"
            app:layout_constraintStart_toStartOf="@id/guidelineTwo"
            app:layout_constraintEnd_toStartOf="@id/guidelineThree"
            android:layout_marginTop="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:elevation="10dp"
            android:text="Evaluación"></TextView>

        <android.support.v7.widget.CardView
            android:id="@+id/cardviewWarranty"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/textviewWarranty"
            app:layout_constraintBottom_toBottomOf="@id/textviewWarranty"
            app:layout_constraintStart_toStartOf="@id/guidelineOne"
            app:layout_constraintEnd_toEndOf="@id/guidelineThree"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">
            <View
                android:layout_width="4dp"
                android:layout_height="match_parent"
                android:background="#C62828"></View>
        </android.support.v7.widget.CardView>

        <ImageView
            android:id="@+id/imageviewWarranty"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:layout_constraintTop_toTopOf="@id/textviewWarranty"
            app:layout_constraintBottom_toBottomOf="@id/textviewWarranty"
            app:layout_constraintStart_toStartOf="@id/guidelineOne"
            app:layout_constraintEnd_toEndOf="@id/guidelineTwo"
            android:src="@drawable/ic_warranty"
            android:elevation="10dp"></ImageView>

        <TextView
            android:id="@+id/textviewWarranty"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@id/guidelineThree"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@id/guidelineTwo"
            app:layout_constraintTop_toBottomOf="@id/textviewEvaluation"
            android:layout_marginTop="16dp"
            android:elevation="10dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:text="Garantía"></TextView>

        <android.support.v7.widget.CardView
            android:id="@+id/cardviewVisit"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/textviewVisit"
            app:layout_constraintBottom_toBottomOf="@id/textviewVisit"
            app:layout_constraintStart_toStartOf="@id/guidelineOne"
            app:layout_constraintEnd_toEndOf="@id/guidelineThree"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">
            <View
                android:layout_width="4dp"
                android:layout_height="match_parent"
                android:background="#C62828"></View>
        </android.support.v7.widget.CardView>

        <ImageView
            android:id="@+id/imageviewVisit"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:layout_constraintTop_toTopOf="@id/textviewVisit"
            app:layout_constraintBottom_toBottomOf="@id/textviewVisit"
            app:layout_constraintStart_toStartOf="@id/guidelineOne"
            app:layout_constraintEnd_toEndOf="@id/guidelineTwo"
            android:elevation="10dp"
            android:src="@drawable/ic_visit"></ImageView>

        <TextView
            android:id="@+id/textviewVisit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/textviewWarranty"
            app:layout_constraintStart_toStartOf="@id/guidelineTwo"
            app:layout_constraintEnd_toEndOf="@id/guidelineThree"
            android:layout_marginTop="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:elevation="10dp"
            android:text="Visita"></TextView>

        <android.support.v7.widget.CardView
            android:id="@+id/cardviewInvestmentPlan"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/textviewInvestmentPlan"
            app:layout_constraintBottom_toBottomOf="@id/textviewInvestmentPlan"
            app:layout_constraintStart_toStartOf="@id/guidelineOne"
            app:layout_constraintEnd_toEndOf="@id/guidelineThree"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">
            <View
                android:layout_width="4dp"
                android:layout_height="match_parent"
                android:background="#C62828"></View>
        </android.support.v7.widget.CardView>

        <ImageView
            android:id="@+id/imageviewInvestmentPlan"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:layout_constraintTop_toTopOf="@id/textviewInvestmentPlan"
            app:layout_constraintBottom_toBottomOf="@id/textviewInvestmentPlan"
            app:layout_constraintStart_toStartOf="@id/guidelineOne"
            app:layout_constraintEnd_toEndOf="@id/guidelineTwo"
            android:elevation="10dp"
            android:src="@drawable/ic_investmentplan"></ImageView>

        <TextView
            android:id="@+id/textviewInvestmentPlan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/textviewVisit"
            app:layout_constraintStart_toStartOf="@id/guidelineTwo"
            app:layout_constraintEnd_toEndOf="@id/guidelineThree"
            app:layout_constraintEnd_toStartOf="@id/guidelineThree"
            android:layout_marginTop="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:elevation="10dp"
            android:text="Plan de Inversión"></TextView>
        <android.support.v7.widget.CardView
            android:id="@+id/cardviewCommittee"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/textviewCommittee"
            app:layout_constraintBottom_toBottomOf="@id/textviewCommittee"
            app:layout_constraintStart_toStartOf="@id/guidelineOne"
            app:layout_constraintEnd_toEndOf="@id/guidelineThree"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">
            <View
                android:layout_width="4dp"
                android:layout_height="match_parent"
                android:background="#C62828"></View>
        </android.support.v7.widget.CardView>

        <ImageView
            android:id="@+id/imageviewCommittee"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:layout_constraintTop_toTopOf="@id/textviewCommittee"
            app:layout_constraintBottom_toBottomOf="@id/textviewCommittee"
            app:layout_constraintStart_toStartOf="@id/guidelineOne"
            app:layout_constraintEnd_toEndOf="@id/guidelineTwo"
            android:elevation="10dp"
            android:src="@drawable/ic_committee"></ImageView>

        <TextView
            android:id="@+id/textviewCommittee"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/textviewInvestmentPlan"
            app:layout_constraintStart_toStartOf="@id/guidelineTwo"
            app:layout_constraintEnd_toEndOf="@id/guidelineThree"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:elevation="10dp"
            android:text="Acta de comité"
            android:layout_marginTop="16dp"></TextView>

    </android.support.constraint.ConstraintLayout>
</android.support.v4.widget.NestedScrollView>
